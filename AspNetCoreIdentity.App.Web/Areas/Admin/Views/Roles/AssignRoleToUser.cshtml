

@model List<AdminModel.AssignRoleToUserViewModel>



<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Kullaniciya Role Atama</h2>
        <form asp-action="AssaignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
           
             
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exsit" />
                    <label class="form-check-label">@Model[i].Name</label>
                    <input type="hidden"  asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit"  class="btn btn-primary" value="Role ata" />
            </div>


        </form>
        <div class="mt-3">

            <a asp-action="Home" asp-controller="UserList" class="btn accordion-body">Role Listesine geri don</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
