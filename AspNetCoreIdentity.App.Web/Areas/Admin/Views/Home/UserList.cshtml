
@{
    ViewData["Title"] = "UserList";
}


@model List<AdminModel.UserViewModel>
<h1>UserList</h1>

<table class="table table-striped table table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Role Islemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <a asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@item.Id">Role ata</a>
                </td>
            </tr>
        }
    </tbody>
</table>