
@{
    ViewData["Title"] = "ResetPassword";
}



@model ForgetPasswordViewModel

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-4 offset-md-4">

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["success"]
            </div>
        }

        <h4 class="btn btn-info">Sifre yenileme linki, E-Posta adresinize gonderilecektir.</h4>
        <div asp-validation-summary="ModelOnly" class="text text-danger" role="alert">
        </div>
        <form method="post">
            <div class="mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control btn btn-outline-info">
                    <span asp-validation-for="Email" class="text text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Gonder</button>
        </form>
    </div>
</div>





